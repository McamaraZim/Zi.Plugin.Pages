@model Nop.Plugin.Zimaltec.CustomPages.Areas.Admin.Models.ZiPage.ZiPageModel
@{
    var layout = "_AdminLayout";
    if (ViewBag.isPopup == true) { layout = "_AdminPopupLayout"; }
    Layout = layout;

    NopHtml.SetActiveMenuItemSystemName(D.AdminMenu.MANAGE_PAGES);
}

<form method="post" id="zipage-form" asp-area="Admin" asp-controller="CustomPagesAdmin" asp-action="Edit">
    <nop-antiforgery-token/>
    <input type="hidden" asp-for="Id"/>

    @if (ViewBag.isPopup == true)
    {
        <input type="hidden" name="isPopup" id="isPopup" value="@ViewBag.isPopup.ToString()"/>
    }

    <div class="content-header clearfix">
        <h1 class="float-left">
            @T(D.Localization.Admin.Pages.EDIT)
            @if (ViewBag.isPopup != true)
            {
                <small>
                    <i class="fa fa-arrow-circle-left"></i>
                    <a asp-action="List">@T(D.Localization.Admin.Pages.BACK_TO_LIST)</a>
                </small>
            }
        </h1>
        <div class="float-right">
            <button type="submit" name="save" id="save-button" class="btn btn-primary save-settings-button">
                <i class="far fa-save"></i> @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" id="save-continue-button" class="btn btn-primary save-settings-button">
                <i class="far fa-save"></i> @T("Admin.Common.SaveContinue")
            </button>
            @if (Model.Id > 0 && ViewBag.isPopup != true)
            {
                <span id="zipage-delete" class="btn btn-danger">
                    <i class="far fa-trash-alt"></i> @T("Admin.Common.Delete")
                </span>
            }
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @{ await Html.RenderPartialAsync(D.Views.CREATE_OR_UPDATE_VIEW, Model); }
            </div>
        </div>
    </section>
</form>

@if (Model.Id > 0 && ViewBag.isPopup != true)
{
    @* Para que funcione 100% como en Attachments,
       tu acción POST Delete debería redirigir a List (no JSON).
       Si prefieres mantener JSON, deja el botón fuera o cambia a AJAX manual. *@
    <nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="zipage-delete"/>
}
